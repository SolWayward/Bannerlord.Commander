<Prefab>
  <Window>
    <BrushWidget Id="HeroReservedSpacePanel"
      WidthSizePolicy="StretchToParent"
      HeightSizePolicy="Fixed"
      SuggestedHeight="60"
      MarginBottom="4"
      Brush="HeroEditor.Input.Background">
      <Children>
        <BrushWidget Id="ReservedTopBorder" WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
          SuggestedHeight="2" VerticalAlignment="Top"
          Brush="HeroEditor.Section.Border" />
        <BrushWidget Id="ReservedBottomBorder" WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
          SuggestedHeight="2" VerticalAlignment="Bottom"
          Brush="HeroEditor.Section.Border" />
        <BrushWidget Id="ReservedLeftBorder" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
          SuggestedWidth="2" HorizontalAlignment="Left"
          Brush="HeroEditor.Section.Border" />
        <BrushWidget Id="ReservedRightBorder" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
          SuggestedWidth="2" HorizontalAlignment="Right"
          Brush="HeroEditor.Section.Border" />
        
        <TextWidget Id="ReservedText" WidthSizePolicy="StretchToParent"
          HeightSizePolicy="StretchToParent"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Brush="Clan.TabControl.Text"
          Brush.FontSize="10"
          Brush.TextHorizontalAlignment="Center"
          Text="Reserved Space" />
      </Children>
    </BrushWidget>
  </Window>
</Prefab>
