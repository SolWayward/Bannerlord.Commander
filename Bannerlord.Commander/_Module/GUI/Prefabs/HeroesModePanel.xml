<!-- ============================================================================================================ -->
<!-- HEROES MODE PANEL - Complete Heroes Mode UI                                                             -->
<!-- Contains: Hero List (left) + Hero Editor Container (right)                                              -->
<!-- DataSource: HeroesModeVM                                                                                -->
<!-- ============================================================================================================ -->

<Prefab>
  <Window>
    <Widget Id="HeroesModePanel" DataSource="{.}"
      WidthSizePolicy="StretchToParent"
      HeightSizePolicy="StretchToParent"
      IsVisible="@IsVisible">
      <Children>
        <ListPanel Id="HeroesLayoutPanel" WidthSizePolicy="StretchToParent"
          HeightSizePolicy="StretchToParent"
          StackLayout.LayoutMethod="HorizontalLeftToRight">
          <Children>

            <!-- LEFT: Hero List Panel bound to HeroListVM -->
            <CommanderHeroListPanel DataSource="{HeroList}" />

            <!-- RIGHT: Hero Editor Container bound to HeroEditorVM -->
            <BrushWidget Id="HeroEditorContainer" DataSource="{HeroEditor}"
              WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
              SuggestedWidth="720" IsVisible="@IsVisible"
              Brush="HeroEditor.Panel.Background">
              <Children>
                <BrushWidget Id="EditorTopBorder" WidthSizePolicy="StretchToParent"
                  HeightSizePolicy="Fixed" SuggestedHeight="2"
                  VerticalAlignment="Top" Brush="HeroEditor.Section.Border" />
                <BrushWidget Id="EditorBottomBorder" WidthSizePolicy="StretchToParent"
                  HeightSizePolicy="Fixed" SuggestedHeight="2"
                  VerticalAlignment="Bottom" Brush="HeroEditor.Section.Border" />
                <BrushWidget Id="EditorLeftBorder" WidthSizePolicy="Fixed"
                  HeightSizePolicy="StretchToParent" SuggestedWidth="2"
                  HorizontalAlignment="Left" Brush="HeroEditor.Section.Border" />
                <BrushWidget Id="EditorRightBorder" WidthSizePolicy="Fixed"
                  HeightSizePolicy="StretchToParent" SuggestedWidth="2"
                  HorizontalAlignment="Right" Brush="HeroEditor.Section.Border" />

                <!-- Hero Editor Panel -->
                <HeroEditorPanel />
              </Children>
            </BrushWidget>

          </Children>
        </ListPanel>
      </Children>
    </Widget>
  </Window>
</Prefab>
