<?xml version="1.0" encoding="utf-8"?>
<Prefab xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../schemas/gauntletui.xsd">
  
  <!-- Reusable button prefab -->
  <Widget Id="CommanderButton"
          WidthSizePolicy="Fixed"
          HeightSizePolicy="Fixed"
          SuggestedWidth="150"
          SuggestedHeight="40">
    <ButtonWidget WidthSizePolicy="StretchToParent"
                  HeightSizePolicy="StretchToParent"
                  Brush="ButtonBrush1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
      <TextWidget WidthSizePolicy="StretchToParent"
                  HeightSizePolicy="StretchToParent"
                  Text="@Text"
                  Brush="TextBrush"
                  TextHorizontalAlignment="Center"
                  TextVerticalAlignment="Center" />
    </ButtonWidget>
  </Widget>
  
  <!-- Reusable panel header prefab -->
  <Widget Id="CommanderPanelHeader"
          WidthSizePolicy="StretchToParent"
          HeightSizePolicy="Fixed"
          SuggestedHeight="50"
          Brush="Header.Center">
    <TextWidget WidthSizePolicy="StretchToParent"
                HeightSizePolicy="StretchToParent"
                Text="@HeaderText"
                Brush="TextBrush"
                FontSize="28"
                TextHorizontalAlignment="Center"
                TextVerticalAlignment="Center"
                MarginLeft="10"
                MarginRight="10" />
  </Widget>

</Prefab>
