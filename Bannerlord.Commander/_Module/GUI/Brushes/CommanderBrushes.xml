        <BrushLayer Name="Selected" AlphaFactor="1" Color="#453920FF" />
      </Style>
    </Styles>
  </Brush>

  <!-- Hero Creator Section Label Text Brush -->
  <Brush Name="HeroCreator.SectionLabel" FontSize="14" Font="montserrat">
    <Styles>
      <Style Name="Default" FontColor="#C0A87CFF" />
    </Styles>
  </Brush>
</Brushes>