<?xml version="1.0" encoding="utf-8"?>
<Brushes>
  <!-- Commander Tab Button Brush - Provides visual feedback for hover and pressed states -->
  <Brush Name="Commander.Tab.Button">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#444444FF" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="1.0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8" />
      </Style>
    </Styles>
  </Brush>
</Brushes>
