<?xml version="1.0" encoding="utf-8"?>
<Brushes>
  <!-- Simple text brush that should work -->
  <Brush Name="Commander.Text.White" Font="Galahad" FontSize="20">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#FFFFFFFF" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Commander.Text.Gray" Font="Galahad" FontSize="16">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#CCCCCCFF" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Commander.Button.Normal" Font="Galahad" FontSize="18">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#FFFFFFFF" />
      </Style>
    </Styles>
  </Brush>

  <!-- Tab Text - Selected State (Bright gold, no heavy shadow) -->
  <Brush Name="Commander.Tab.Text.Selected" Font="Galahad" FontSize="15" TextHorizontalAlignment="Center" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#F5DEB3FF" GlowColor="#00000000" OutlineColor="#00000000" OutlineAmount="0" GlowRadius="0" Blur="0" ShadowOffset="0" ShadowAngle="0" />
      </Style>
    </Styles>
  </Brush>

  <!-- Tab Text - Unselected State (Muted, lighter shadow) -->
  <Brush Name="Commander.Tab.Text.Unselected" Font="Galahad" FontSize="15" TextHorizontalAlignment="Center" TextVerticalAlignment="Center">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#9A9A9AFF" GlowColor="#00000000" OutlineColor="#00000000" OutlineAmount="0" GlowRadius="0" Blur="0" ShadowOffset="0" ShadowAngle="0" />
      </Style>
      <Style Name="Hovered">
        <TextMaterial Color="#BABABAFF" GlowColor="#00000000" OutlineColor="#00000000" OutlineAmount="0" GlowRadius="0" Blur="0" ShadowOffset="0" ShadowAngle="0" />
      </Style>
      <Style Name="Pressed">
        <TextMaterial Color="#D0D0D0FF" GlowColor="#00000000" OutlineColor="#00000000" OutlineAmount="0" GlowRadius="0" Blur="0" ShadowOffset="0" ShadowAngle="0" />
      </Style>
    </Styles>
  </Brush>

  <!-- LEGACY: Mode Toggle Button Text - Selected State (Gold/Tan color) -->
  <Brush Name="Commander.ModeButton.Text.Selected" Font="Galahad" FontSize="16">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#D4C4A8FF" />
      </Style>
    </Styles>
  </Brush>

  <!-- LEGACY: Mode Toggle Button Text - Unselected State (Muted gray) -->
  <Brush Name="Commander.ModeButton.Text.Unselected" Font="Galahad" FontSize="16">
    <Styles>
      <Style Name="Default">
        <TextMaterial Color="#888888FF" />
      </Style>
      <Style Name="Hovered">
        <TextMaterial Color="#AAAAAAFF" />
      </Style>
      <Style Name="Pressed">
        <TextMaterial Color="#CCCCCCFF" />
      </Style>
    </Styles>
  </Brush>

  <!-- LEGACY: Mode Toggle Button Background - Selected State -->
  <Brush Name="Commander.ModeButton.Background.Selected">
    <Styles>
      <Style Name="Default">
        <ColorFactor Red="0.545" Green="0.451" Blue="0.333" Alpha="1.0" />
      </Style>
    </Styles>
  </Brush>

  <!-- LEGACY: Mode Toggle Button Background - Unselected State -->
  <Brush Name="Commander.ModeButton.Background.Unselected">
    <Styles>
      <Style Name="Default">
        <ColorFactor Red="0.2" Green="0.2" Blue="0.2" Alpha="1.0" />
      </Style>
      <Style Name="Hovered">
        <ColorFactor Red="0.25" Green="0.25" Blue="0.25" Alpha="1.0" />
      </Style>
      <Style Name="Pressed">
        <ColorFactor Red="0.3" Green="0.3" Blue="0.3" Alpha="1.0" />
      </Style>
    </Styles>
  </Brush>
</Brushes>
