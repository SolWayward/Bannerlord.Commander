<?xml version="1.0" encoding="utf-8"?>
<Brushes>
  <!-- Commander Tab Button Brush - Multi-layer AlphaFactor pattern matching native Bannerlord tabs -->
  <Brush Name="Commander.Tab.Button">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
      <BrushLayer Name="Selected" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#3A3A3AFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" AlphaFactor="1" ColorFactor="1.3" Color="#3A3A3AFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" AlphaFactor="0" />
        <BrushLayer Name="Selected" AlphaFactor="1" Color="#453920FF" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" AlphaFactor="1" ColorFactor="0.8" Color="#3A3A3AFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
    </Styles>
    <SoundProperties>
      <EventSounds>
        <EventSound EventName="Click" Audio="tab" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <!-- Commander Hero Row Brush - For selectable hero list items -->
  <Brush Name="Commander.HeroRow">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
      <BrushLayer Name="Selected" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#1E1E1EFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#2A2A2AFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" AlphaFactor="0" />
        <BrushLayer Name="Selected" AlphaFactor="1" Color="#453920FF" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" AlphaFactor="1" ColorFactor="0.8" Color="#1E1E1EFF" />
        <BrushLayer Name="Selected" AlphaFactor="0" />
      </Style>
    </Styles>
  </Brush>

  <!-- Hero Editor Panel Background Brush -->
  <Brush Name="HeroEditor.Panel.Background">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#2a2a2aFF" />
      </Style>
    </Styles>
  </Brush>

  <!-- Hero Editor Section Border Brush -->
  <Brush Name="HeroEditor.Section.Border">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#8B7355FF" />
      </Style>
    </Styles>
  </Brush>

  <!-- Hero Editor Standard Button Brush -->
  <Brush Name="HeroEditor.Button.Standard">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
      <BrushLayer Name="Hovered" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#453920FF" />
        <BrushLayer Name="Hovered" AlphaFactor="0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" AlphaFactor="1" ColorFactor="1.2" Color="#453920FF" />
        <BrushLayer Name="Hovered" AlphaFactor="0" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" AlphaFactor="1" ColorFactor="0.8" Color="#453920FF" />
        <BrushLayer Name="Hovered" AlphaFactor="0" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" AlphaFactor="0.5" Color="#453920FF" />
        <BrushLayer Name="Hovered" AlphaFactor="0" />
      </Style>
    </Styles>
    <SoundProperties>
      <EventSounds>
        <EventSound EventName="Click" Audio="event:/ui/panels/panel_common_tab" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <!-- Hero Editor Banner Hover Overlay Brush - Semi-transparent highlight on hover -->
  <Brush Name="HeroEditor.Banner.HoverOverlay">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="0" Color="#FFFFFF00" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" AlphaFactor="0.15" Color="#FFFFFFFF" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" AlphaFactor="0.08" Color="#FFFFFFFF" />
      </Style>
    </Styles>
  </Brush>

  <!-- Hero Editor Input Field Background Brush -->
  <Brush Name="HeroEditor.Input.Background">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="1" Color="#1a1a1aFF" />
      </Style>
    </Styles>
